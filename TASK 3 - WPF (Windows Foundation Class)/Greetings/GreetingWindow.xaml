<Window x:Class="GreetingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Greetings"
        mc:Ignorable="d"
        Title="GreetingWindow" Height="450" Width="800">
    <Grid x:Name="GreetingWindow1" Background="#FFFFB5B5">
        <TextBox x:Name="LabelGreeting" HorizontalAlignment="Center" Height="166" TextWrapping="Wrap" Text="Good morning, User!" VerticalAlignment="Center" Width="490" Background="{x:Null}" TextChanged="TextBox_TextChanged" BorderBrush="#FFFFB5B5" FontSize="30" TextAlignment="Center"/>
    </Grid>
</Window>
